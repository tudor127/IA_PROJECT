<aiml version="1.0.1" encoding="UTF-8">
<!-- basic_chat.aiml -->
    <category>
        <pattern>HELLO</pattern>
        <template>
            <random>
                <li>Well, hello!</li>
                <li>Hello , what is your name?</li>
            </random>
        </template>
    </category>
    <category>
        <pattern>WHAT ARE YOU</pattern>
        <template>
            I'm a bot, silly!
        </template>
    </category>
    <category>
        <pattern>THANK YOU</pattern>
        <template>
            You're welcome!
        </template>
    </category>
    <category>
        <pattern>GOODBYE</pattern>
        <template>
            Goodbye!
        </template>
    </category>
    <category>
        <pattern>MY NAME IS *</pattern>
        <template>Nice to meet you , <set name="name"><star/></set>!</template>
    </category>
    <category>
        <pattern>WHAT IS MY NAME</pattern>
        <template> Your name is <get name="name"/>.</template>
    </category>
    <category>
        <pattern>*</pattern>
        <template>I don't understand!</template>
    </category>
</aiml>